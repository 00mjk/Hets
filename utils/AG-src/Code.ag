imports
{
import UU_Pretty
}
TYPE Exprs    = [Expr]
             

TYPE Decls    = [Decl]
TYPE DataAlts = [DataAlt]
            
TYPE Types    = [Type]
             


DATA Program  | Program     decls : Decls

DATA Expr     | Let         decls : Decls   
                            body  : Expr
              | TupleExpr   exprs : Exprs
              | App         name  : {String} 
                            args  : Exprs
              | SimpleExpr  txt   : {String}
              | PP          pp    : {PP_Doc}


DATA Decl     | Decl        lhs   : Lhs 
                            rhs   : Expr
              | Data        name  : {String} 
                            alts  : DataAlts
              | Type        name  : {String} 
                            tp    : Type
              | TSig        name  : {String} 
                            tp    : Type
              | Comment     txt   : {String}


DATA DataAlt  | DataAlt     name  : {String} 
                            args  : {[String]}

DATA Type     | Arr         left  : Type 
                            right : Type
              | TupleType   tps   : Types
              | List        tp    : Type
              | SimpleType  txt   : {String}
	       
DATA Lhs      | Pattern     pat   : {PP_Doc}
              | TupleLhs    comps : {[String]}
              | Fun         name  : {String} 
                            args  : Exprs