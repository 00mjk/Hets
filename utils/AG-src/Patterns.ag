imports
{
import TokenDef(Pos)
}
TYPE Patterns   = [Pattern]

DATA Pattern    | Constr     pos   : {Pos}
                             name  : {String}
                             pats  : Patterns
                | Product    pos   : {Pos}
                             pats  : Patterns
                | Var        pos   : {Pos}
                             name  : {String}
                | Alias      pos   : {Pos}
                             name  : {String}
                             pat   : Pattern
                | Underscore pos   : {Pos}