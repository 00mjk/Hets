imports
{
import CommonTypes
import UU_Pretty
import UU_Maps
import Patterns
import Expression
}

DATA Grammar      | Grammar typeSyns : {TypeSyns}
                            useMap   : {UseMap}
                            prods    : Productions

TYPE Productions  = [Production]

TYPE Alternatives = [Alternative]

TYPE Children     = [Child]

TYPE Rules        = [Rule]

TYPE LocRules     = [LocRule]

DATA Production   | Production nt   : {String}
                               inh  : {Attributes}
                               syn  : {Attributes}
                               alts : Alternatives

DATA Alternative  | Alternative con      : {String}
                                children : Children
                                rules    : Rules
                                locrules : LocRules


DATA Child        | Child   name  : {String}
                            tp    : {String}
                            inh   : {Attributes}
                            syn   : {Attributes}
                            rules : Rules

DATA Rule         | Rule    attr  : {Name}
                            rhs   : Expression

DATA LocRule      | LocRule pat   : Pattern
                            rhs   : Expression
                            owrt  : {Bool}