logic OWL

spec person =
    
    Datatype: height
        EquivalentTo: integer [digits 3]
    Datatype: natural
        EquivalentTo: not negativeInteger
    Datatype: Years
        EquivalentTo: natural
    Datatype: Name
        EquivalentTo: string [pattern "[a-z]"^^string]

    ObjectProperty: hasSSN
    ObjectProperty: hasName
    ObjectProperty: hasChildren
    ObjectProperty: hasDaughter
        SubPropertyOf: hasChildren

    DataProperty: hasAge
        Range: natural [> 10]
    DataProperty: hasHeight
        Range: height [maxLength 2]

    Class: smallChild
        SubClassOf: hasHeight value 100

    Class: Person
        HasKey: hasSSN, hasAge, hasName

    Individual: Ann
        Types: hasAge some natural, hasChildren min 2
        Facts: hasAge 30

end
